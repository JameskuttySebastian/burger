<div class="container">
    <nav class="navbar titlebar">
        <h1>The Burger House</h1>
    </nav>
    <div class="row">
<!--        This div is for entering new bergers-->
        <div class="col-md-4 ">
            {{#each burgers}}
                {{#unless eaten}}
                    {{> burgers/burger-block eaten=false}}
                {{/unless}}
            {{/each}}
        </div>

<!--        This area is for entering burger-->
        <div class="col-md-4 create-burger">
            <div>
                <form>
                    <div class="form-group burger">
                        <input type="text" class="form-control" id="burger-name" placeholder="Enter burger name">
                    </div>
                    <button type="submit" class="btn btn-outline-secondary btn-sm float-right">Submit</button>
                </form>
            </div>

        </div>

<!--        This div is for entering eaten burgers-->
        <div class="col-md-4 ">
            {{#each burgers}}
                {{#unless eaten}}
                    {{> burgers/burger-block eaten=true}}
                {{/unless}}
            {{/each}}

        </div>
    </div>
</div>